<h2>Edytuj klienta {{client.name}} (<small>{{client.email}}</small>)</h2>
<form method="POST" action="/client/{{client.id}}?_method=PUT">
  <label>
    <p>
      E-mail:
    </p>
    <p>
      <input type="email" name="email" value="{{client.email}}" required/>
    </p>
  </label>
  <label>
    <p>
      Name:
    </p>
    <p>
      <input type="text" name="name" value="{{client.name}}" required/>
    </p>
  </label>
  <label>
    <p>
      Data nastÄ™pnego kontaktu:
    </p>
    <p>
      <input
        type="date"
        name="nextContactAt"
        value="{{client.nextContactAt}}"
        required
      />
    </p>
  </label>
  <label>
    <p>
      Notatki:
    </p>
    <p>
      <textarea name="notes">{{client.notes}}</textarea>
    </p>
  </label>

  <p>
    <button type="submit">Dodaj</button>
  </p>
    <p>
        {{>go-to-clients}}
    </p>
</form>
